@page "/login"
<div class="flex justify-center flex-row items-center m-5">
    <form method="post" class="border border-2 border-black">
        <div class="flex justify-center">
            <h3>Login</h3>
        </div>
        <fieldset class="p-5">
            <div>
                <label>Email</label>
                <div class="border border-1 border-black">
                    <input type="text">
                </div>
            </div>
            <div>
                <label>Senha</label>
                <div class="border border-1 border-black">
                    <input type="password">
                </div>
            </div>
            <div class="flex justify-center border border-2 border-black m-2">
                <button type="submit">Logar</button>
            </div>
        </fieldset>
    </form>
</div>

